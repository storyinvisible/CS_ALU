module adder (
    input alufn[2],// alufn[1:0] for selecting operation
    input a[16],
    input b[16],
    output sum[16]

  ) {
  // This module is capable of performing adding, substraction and multiplication.
  
  always {
    
    sum=16b0;
    case(alufn[1:0]){
      b00:
        sum = a + b;
      b01:
        sum = a - b;
      b10:
        sum = a * b;
             
      } 
    
  }
}
